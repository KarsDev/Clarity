class Person {
    var name = "x"
    var age

    constructor(name, age) {
        local.name = name
        local.age = age
    }

    fn greet() {
        native.println("My name is " + local.getName() + " and i'm " + local.getAge() + " years old")
    }

    fn getName() {
        return name
    }

    fn getAge() {
        return age
    }
}

fn main() {
    var john = new Person("John", 16)

    john.age = get()
    john.greet()
}

fn get() {
    return 1 + 9
}